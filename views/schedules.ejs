<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('header') %>
    <div class="container mt-4">
        <h2>Lịch trực</h2>
        <a href="/schedules/new" class="btn btn-primary mb-3">Đăng ký lịch trực</a>
        <ul class="list-group">
            <% schedules.reverse().forEach(schedule => { %>
                <li class="list-group-item">
                    <p><strong>MSSV:</strong> <%= schedule.mssv %></p>
                    <p><strong>Lịch trực:</strong></p>
                    <ul>
                        <% const dayNames = ['Thứ Hai', 'Thứ Ba', 'Thứ Tư', 'Thứ Năm', 'Thứ Sáu', 'Thứ Bảy', 'Chủ Nhật']; %>
                        <% for (let i = 0; i < 7; i++) { %> <!-- Duyệt từ 0 đến 6 để bao gồm cả Chủ Nhật -->
                            <% if (schedule.scheduleData.has(i.toString()) && schedule.scheduleData.get(i.toString()).length > 0) { %> 
                                <li>
                                    <strong><%= dayNames[i] %>:</strong> 
                                    <%= schedule.scheduleData.get(i.toString()).join(', ') %> <!-- Hiển thị các khung giờ -->
                                </li>
                            <% } %>
                        <% } %>
                    </ul>
                    <p><strong>Ngày đăng ký:</strong> <%= new Date(schedule.registrationTime).toLocaleString() %></p>
                    <p><strong>Trạng thái:</strong> <%= schedule.status %></p>
                    <% if (schedule.status === 'Pending') { %>
                        <form action="/schedules/<%= schedule._id %>/approve" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-success">Duyệt</button>
                        </form>
                        <form action="/schedules/<%= schedule._id %>/reject" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Từ chối</button>
                        </form>
                    <% } %>
                </li>
            <% }); %>
        </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
