<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .schedule-table {
            display: grid;
            grid-template-columns: 100px repeat(7, 1fr);
            gap: 5px;
        }

        .hour, .day {
            padding: 10px;
            border: 1px solid #ccc;
            text-align: center;
        }

        .hour {
            background-color: #f8f9fa;
        }

        .day {
            background-color: #e9ecef;
        }

        @media (max-width: 768px) {
            .schedule-table {
                grid-template-columns: 50px repeat(7, 1fr);
                font-size: 12px;
            }

            .hour, .day {
                padding: 5px;
            }

            .hour {
                font-weight: bold;
            }
        }
    </style>
</head>

<body>
    <%- include('header') %>
    <div class="container mt-4">
        <h2>Đăng ký lịch trực</h2>
        <form action="/schedules" method="POST">
            <div class="mb-3">
                <label for="mssv" class="form-label">Mã số sinh viên (MSSV)</label>
                <input type="text" class="form-control" id="mssv" name="mssv" value="<%= schedule ? schedule.mssv : '' %>" required>
            </div>
            <div class="mb-3">
                <label for="dates" class="form-label">Chọn ngày và khung giờ</label>
                <div class="schedule-table">
                    <!-- Hàng tiêu đề cho các ngày trong tuần -->
                    <div class="hour"></div> <!-- Cột trống -->
                    <div class="hour">Mon</div>
                    <div class="hour">Tue</div>
                    <div class="hour">Wed</div>
                    <div class="hour">Thu</div>
                    <div class="hour">Fri</div>
                    <div class="hour">Sat</div>
                    <div class="hour">Sun</div>

                    <!-- Tạo các mốc giờ cụ thể -->
                    <% const timeSlots = ['7h50 - 11h15', '13h30 - 17h']; %>
                    <% timeSlots.forEach(timeSlot => { %>
                        <div class="hour"><%= timeSlot %></div>
                        <% for (let day = 1; day <= 7; day++) { %>
                            <div class="day">
                                <input type="checkbox" name="dates[<%= day %>][<%= timeSlot %>]" value="selected">
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
